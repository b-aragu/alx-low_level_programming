# make -f 4-Makefile
# school file for building 'school' executable
# adding variables and making it first useful

CC = gcc
SRC = main.c holberton.c
OBJ = $(patsubst %.c,%.o,$(SRC))
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY : all clean oclean fclean re
all : m.h $(OBJ)
    $(CC) $(OBJ) -o $(NAME)
clean :
    $(RM) *~ $(NAME)
oclean :
    $(RM) $(OBJ)
fclean : clean oclean
re : oclean all
